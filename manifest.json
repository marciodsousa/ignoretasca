{
	"manifest_version": 2,
	"name": "Ignore trolls das Tasca",
	"description": "Serve para ignorar trolls da Tasca do Cherba",
	"version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://atascadocherba.com/*"],
      "js": ["contentScript.js"]
    }
	],
	"icons": {
		"64": "icon.png"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
			"storage"
	]
}
